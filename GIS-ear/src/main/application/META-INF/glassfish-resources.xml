<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN" "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>

    <!-- Custom Resources -->
    <custom-resource factory-class="org.glassfish.resources.custom.factory.PropertiesFactory" jndi-name="gis/batch_properties" res-type="java.util.Properties">
        <property name="archiveFileUploadLocation" value="/archive/"/>
        <property name="batch-auto-start-schedule" value="5 * * * *"/>
        <property name="bufferSize" value="30000"/>
        <property name="chainItems" value="giswar.batch.DataComponent,giswar.batch.DataLoadComponent,giswar.batch.HarsFileCreatorComponent,giswar.batch.ArchiverComponent,giswar.batch.EmailComponent,giswar.batch.CleanupComponent"/>
        <property name="createImmediateScheduler" value="false"/>
        <property name="dbBatchSize" value="5000"/>
        <property name="emailBody" value="Please find attached summary for the last GIS data load"/>
        <property name="emailSubject" value="GIS Dev Data load Summary"/>
        <property name="fedFileHostUserId" value="gisd"/>
        <property name="fedFileLocation" value="/"/>
        <property name="fedFilehost" value="${ENV=FED_FILE_SERVER}"/>
        <property name="harsFileHostUserId" value="HARGISUser"/>
        <property name="harsFileUploadLocation" value="/dev/"/>
        <property name="harsFilehost" value="${ENV=HARS_FILE_SERVER}"/>
        <property name="mailFrom" value="***"/>
        <property name="mailTo" value="***"/>
        <property name="run-batch-job" value="true"/>
        <property name="schedule" value="9 0 * * *"/>
        <property name="is-cloud-deployed" value="true"/>
        <property name="aws-api-url" value="${ENV=AWS_API_URL}"/>
    </custom-resource>
    
    <custom-resource res-type="java.util.Properties" jndi-name="gis/oidc_properties"
                     factory-class="org.glassfish.resources.custom.factory.PropertiesFactory">
        <property name="providerUri" value="${ENV=PROVIDER_URI}"/>
        <property name="clientId" value="GIS"/>
        <property name="clientSecret" value="${ENV=gis_keycloak_client_secret}"/>
        <property name="redirectUri" value="${ENV=REDIRECT_URI}"/>
        <property name="siteminderLogoutUri" value="${ENV=SITEMINDER_URI}"/>
        <property name="scope" value="openid"/>
        <property name="callerGroupsClaim" value="gis_role"/>
        <property name="callerNameClaim" value="preferred_username"/>
        <property name="phsaLogoutUri" value="***"/>
    </custom-resource>
    
    <jdbc-resource pool-name="GIS-DB-Internal_Proxy_user" jndi-name="jdbc/gis"></jdbc-resource>
    <jdbc-connection-pool name="GIS-DB-Internal_Proxy_user" is-isolation-level-guaranteed="false"
                          datasource-classname="org.postgresql.ds.PGSimpleDataSource"
                          sql-trace-listeners="" res-type="javax.sql.DataSource">
        <property name="URL" value="${ENV=JDBC_SETTING}"></property>
        <property name="Password" value="${ENV=PG_PASSWORD}"></property>
        <property name="driverClass" value="org.postgresql.Driver"/>
        <property name="User" value="${ENV=PG_USER}"></property>
        <property name="CurrentSchema" value="gis"></property>
    </jdbc-connection-pool>

</resources>
